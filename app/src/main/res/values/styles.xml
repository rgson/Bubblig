<resources>

	<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<item name="android:textViewStyle">@style/TextView</item>
		<item name="android:buttonStyle">@style/Button</item>
		<item name="android:listViewStyle">@style/ListView</item>
	</style>

	<style name="Button" parent="@android:style/Widget.Holo.Light.Button"/>

	<style name="ListView" parent="@android:style/Widget.Holo.Light.ListView"/>

	<style name="TextView" parent="@android:style/Widget.Holo.Light.TextView">
		<item name="android:textSize">@dimen/textsize_normal</item>
	</style>

	<style name="TextView.Category">
		<item name="android:textSize">@dimen/textsize_big</item>
	</style>

	<style name="TextView.Title">
		<item name="android:textSize">@dimen/textsize_big</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextView.Detail">
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:textColor">@color/detail</item>
	</style>

	<style name="ImageView"/>

	<style name="ImageView.Category">
		<item name="android:background">@drawable/color_circle</item>
	</style>

</resources>
